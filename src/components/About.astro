---
import Card from "./Card.astro";
import CardContainer from "./CardContainer.astro";
---
<CardContainer>
    <Card title="Arquitectura" content="Un proyecto de alta calidad, escuchando y sugiriendo las mejores propuestas al cliente." customContentStyles="md-content" customTitleStyles="sm-title">
        <img src="../../images/icons/icono_arquitectura.svg" alt="Arquitectura" slot="image" class="h-16 sm:h-24">
    </Card>
    <Card title="Construcción" content="Profesionales comprometidos que abarcan desde compras, logística y ejecución del mismo." customContentStyles="md-content" customTitleStyles="sm-title">
        <img src="../../images/icons/icono_construccion.svg" alt="Construcción" slot="image" class="h-16 sm:h-24">
    </Card>
    <Card title="Llave en mano" content="Nosotros nos encargamos de toda la complejidad que implica una obra de construcción." customContentStyles="md-content" customTitleStyles="sm-title">
        <img src="../../images/icons/icono_llave_en_mano.svg" alt="Llave en mano" slot="image" class="h-16 sm:h-24">
    </Card>
</CardContainer>
