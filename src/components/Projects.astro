---
import MainTitle from "./MainTitle.astro";
import Carrousel from "./Carrousel.astro";
import ProjectsCard from "./ProjectsCard.astro";
import cards from "./../../public/mocks/cards.json";
---
<section class="container mt-28 relative" id="proyectos">
    <MainTitle title="Proyectos" customStyles="pb-5 sm-title"/>
    <p class="xl-content text-black -z-10">
        Hemos elegido diferentes obras que finalizamos para despertar las ideas de tu casa ideal. Nosotros desarrollamos t√∫ proyecto desde cero.
    </p>
    <Carrousel data={cards}>
        {cards.map((card) => 
            <ProjectsCard data={card} url={`./${card.id}#ver-mas`}/>
        ) 
        }
    </Carrousel>
</section>